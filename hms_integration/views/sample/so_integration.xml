<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
   <data>
       <record id="sales_order_integration_form_view" model="ir.ui.view">



            <field name="name">sales.order.integration.data.form</field>
            <field name="model">sales.order.integration</field>
            <field name="arch" type="xml">
                <form string="Sales Order Integration">
                    <header>
                        <!-- <button class="btn-primary" name="open_lead_team" string="Teams by Obj" type="object" attrs="{'invisible':[('stage','=','open')]}"/> -->
                        <button class="btn-primary" name="confirm_sale" string="Confirm Sales" type="object"/>


                    </header>
                    <sheet>
                        <!--<div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive" style="background-color:LightGray;color:mediumpurple">
                                <field name="active" widget="boolean_button" options="{'terminology':'archived'}"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="open_lead_team" icon="fa-users" style="background-color:LightGray;color:mediumpurple">
                                <field string="Team" name="team_count" widget="statinfo"/>
                            </button>
                        </div>-->

                        <div class="oe_title">
                            <h1>
                                Sales From Hotelia
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_name"/>

                            </group>

                        </group>
                        <notebook>
                            <page string="Sales Lines">
                                <group>
                                    <field name="sales_lines">
                                        <tree String="Sales Lines">
                                            <field name="name"/>
                                            <field name="product_name"/>
                                            <field name="price"/>
                                            <field name="product_uom_qty"/>

                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
</record>


       <!--Api Connect Tree View-->
    <record id="sales_order_integration_view_tree" model="ir.ui.view">
       <field name="name">sales.order.integration.view.tree</field>
       <field name="model">sales.order.integration</field>
       <field name="arch" type="xml">
           <tree>
               <field name="name"/>
               <field name="partner_name"/>
           </tree>
       </field>
    </record>

       <!--Api Connect Action-->
      <record id="action_sales_order_integration"
              model="ir.actions.act_window">
        <field name="name">Connected Sales</field>
        <field name="res_model">sales.order.integration</field>
       <field name="view_mode">tree,form</field>
       <field name="help" type="html">
         <p class="o_view_nocontent_smiling_face">
           Connected Sales
         </p>
      </field>
    </record>

        <!--HMS API-->
        <!--<menuitem id="hms_integration_menu_root"
            name="HMS Integration"
            sequence="7"/>-->
       <!--Menu School Management-->
       <menuitem id="sales_order_integration_menu"
          name="Connected Sales"
          parent="hms_integration_menu_root"
          action="action_sales_order_integration"
          sequence="1"/>

   </data>
</odoo>